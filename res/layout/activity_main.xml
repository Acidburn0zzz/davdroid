<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/get_davdroid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:onClick="getDavdroid"
            android:visibility="gone"
            android:text="@string/get_davdroid"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/uninstall_davdroid_jb_workaround"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="uninstallWorkaround"
            android:visibility="gone"
            android:text="@string/uninstall_davdroid_jb_workaround"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TextView
            android:id="@+id/credits_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:linksClickable="true" />
        
    </LinearLayout>

</ScrollView>